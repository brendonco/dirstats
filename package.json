{
  "name": "dirstats",
  "version": "1.0.0",
  "description": "Webpack file system statistics dashboad",
  "main": "dist/server/index.js",
  "scripts": {
    "precommit": "lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "prebuild": "rm -rf dist",
    "copy:server": "ncp src/server dist/server",
    "copy:assets": "ncp src/index.html dist/index.html && ncp src/assets dist/assets",
    "build": "webpack --env.production --config config/webpack && npm run copy:server && npm run copy:assets",
    "watch": "DIRSTATS_ENV=development webpack --watch --config config/webpack",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest test"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendonco/dirstats.git"
  },
  "author": "Brendon Co",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendonco/dirstats/issues"
  },
  "homepage": "https://github.com/brendonco/dirstats#readme",
  "dependencies": {
    "ansi-to-html": "^0.6.3",
    "import-from": "^2.1.0",
    "obj-str": "^1.0.0",
    "parse-authors": "^0.2.4",
    "polka": "^0.3.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-favicon": "^0.0.11",
    "recharts": "^1.0.0-beta.10",
    "serve-static": "^1.13.1",
    "socket.io": "^2.0.3",
    "url-loader": "^0.6.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-links": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "all-contributors-cli": "^4.10.1",
    "autoprefixer": "^7.1.2",
    "babel": "^6.23.0",
    "babel-core": "^6.25.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "babel-plugin-recharts": "^1.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^6.0.0",
    "ncp": "^2.0.0",
    "node-sass": "^7.0.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.10.2",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^4.1.1",
    "react-lifecycles-compat": "^3.0.2",
    "react-test-renderer": "^16.4.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "svg-url-loader": "^2.1.1",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0"
  },
  "lint-staged": {
    "src/**/*.{js,json,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
